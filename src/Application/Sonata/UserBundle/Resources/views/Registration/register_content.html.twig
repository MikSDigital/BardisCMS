    {{ form_start(form, {'action': path('sonata_user_registration_register'), 'method': 'POST', 'attr': {'id': 'sonata_user_custom_user_registration_form', 'novalidate': 'novalidate'} }) }}
        <div class="row">
            <div class="large-12 small-12 columns">
                <small class="text-right">{{ 'form.mandatory_fields'|trans({}, 'SonataUserBundle') }}</small>
            </div>
            <div class="large-12 small-12 columns">
                {{ form_widget(form) }}
            </div>
            <div class="large-12 small-12 columns">
                {% if formMessage is defined %}
                    <span class="form-message error form-error is-visible callout {% if form.vars.valid == true %}success{% else %}alert{% endif %}">
                        {{ formMessage }}
                    </span>
                {% endif %}
                <button type="submit" name="submit" id="userRegisterFormBtn" class="button">
                    {{ 'registration.submit'|trans({}, 'SonataUserBundle') }}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
