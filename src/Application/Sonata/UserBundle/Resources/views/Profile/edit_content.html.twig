	<div class="panel-head">
		About you
	</div>
	<hr>
	<div class="panel-body">
		<form action="{{ path('sonata_user_profile_edit') }}" {{ form_enctype(aboutYouForm) }} method="POST">
		    {{ form_widget(aboutYouForm) }}
		    <div>
		        <input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
		    </div>
		</form>
	</div>
</div>

