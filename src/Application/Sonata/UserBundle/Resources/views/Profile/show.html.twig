{% extends "SonataUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="large-12 small-12 columns">
        <div class="row">

            <div class="large-12 small-12 columns">
                <h3>
                    {% block sonata_profile_title %}
                        {% trans from 'SonataUserBundle' %}sonata_profile_title{% endtrans %}
                    {% endblock %}
                </h3>

                {% block sonata_profile_menu %}
                    {{ sonata_block_render({'type': 'sonata.user.block.menu'}, {'current_uri': app.request.requestUri}) }}
                {% endblock %}

                {% block sonata_profile_content '' %}

                {% include "SonataUserBundle:Profile:show_content.html.twig" %}
            </div>

            <div class="large-12 small-12 columns">
                {% include 'SonataUserBundle:UserFlashMessage:render.html.twig' %}
            </div>

        </div>
    </div>
{% endblock fos_user_content %}
