{% block sonata_user_login %}
        <div class="row">
            <div class="large-12 small-12 columns">
            {% block sonata_user_login_form %}
                <form id="user_login_form" action="{{ path("sonata_user_security_check") }}" method="post" role="form" novalidate>
                    <div class="row">
                        <div class="large-12 small-12 columns">
                            <label for="username" class="required">
                                {{ 'security.login.username'|trans({}, 'SonataUserBundle') }}
                            </label>
                            <div class="formFieldContainer">
                                <input type="text" maxlength="50" id="username" name="_username" value="{{ last_username }}" placeholder="" required="required" />
                            </div>
                        </div>

                        <div class="large-12 small-12 columns">
                            <label for="password" class="required">
                                {{ 'security.login.password'|trans({}, 'SonataUserBundle') }}
                            </label>
                            <div class="formFieldContainer">
                                <input type="password" maxlength="50" id="password" name="_password" placeholder="" required="required" />
                            </div>
                        </div>

                        <div class="large-12 small-12 columns">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <span>{{ 'security.login.remember_me'|trans({}, 'SonataUserBundle') }}</span>
                            </label>
                        </div>
                        <div class="large-12 small-12 columns">
                            <p>
                                <a href="{{ path('sonata_user_resetting_request') }}" title="{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}">
                                    {{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}
                                </a>
                            </p>
                        </div>

                        {% block sonata_user_login_error %}
                            {% if error %}
                            <div class="large-12 small-12 columns">
                                <small class="form-message formError alert-box alert">
                                    {{ error|trans({}, 'SonataUserBundle') }}
                                </small>
                            </div>
                            {% endif %}
                        {% endblock %}

                        <div class="large-12 small-12 columns">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                            <button type="submit" name="submit" id="loginBtn" class="button">{{ 'security.login.submit'|trans({}, 'SonataUserBundle') }}</button>
                        </div>
                        <div class="large-12 small-12 columns">
                            <p>
                                <a class="button" href="{{ url('sonata_user_registration_register') }}" title="{{ 'layout.link.create_account'|trans({}, 'SonataUserBundle') }}">
                                    {{ 'layout.link.create_account'|trans({}, 'SonataUserBundle') }}
                                </a>
                            </p>
                        </div>
                    </div>
                </form>
            {% endblock %}
            </div>
        </div>
{% endblock %}
