{% block sonata_user_login %}
    <div class="panel">

        <div class="row">

            {% block sonata_user_login_error %}
                {% if error %}
                <div class="large-12 small-12 columns">
                    <p class="alert alert-danger alert-error">{{ error|trans({}, 'FOSUserBundle') }}</p>
                </div>
                {% endif %}
            {% endblock %}

            {% block sonata_user_login_form %}
                <form action="{{ path("fos_user_security_check") }}" method="post" role="form">

                    <div class="large-12 small-12 columns">
                        <label for="username" class="required">
                            {{ 'security.login.username'|trans({}, 'SonataUserBundle') }}
                        </label>
                        <div class="formFieldContainer">
                            <input type="text" maxlength="50" id="username" name="_username" value="{{ last_username }}" placeholder="" required="required"  />
                        </div>
                    </div>

                    <div class="large-12 small-12 columns">
                        <label for="password" class="required">
                            {{ 'security.login.password'|trans({}, 'SonataUserBundle') }}
                        </label>
                        <div class="formFieldContainer">
                            <input type="password" maxlength="50" id="password" name="_password" placeholder="" required="required"  />
                        </div>
                    </div>

                    <div class="large-12 small-12 columns">
                        <label for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </label>
                    </div>

                    <div class="large-12 small-12 columns">
                        <p>
                            <a href="{{ path('fos_user_resetting_request') }}" title="{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}">
                                {{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}
                            </a>
                        </p>

                        <p>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                            <input type="submit" id="_submit" name="_submit" class="button" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                            <a class="button" href="{{ url('fos_user_registration_register') }}" title="Create an account">
                                Create an account
                            </a>
                        </p>
                    </div>
                </form>
            {% endblock %}
        </div>
    </div>
{% endblock %}
