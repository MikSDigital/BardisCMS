{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="box-title">
                <i class="fa fa-refresh fa-fw"></i> {{ settings.title }}
            </h4>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <p>
                        {{ settings.text }}
                    </p>
                    <a class="btn btn-warning" href="/admin/bardiscms/page/page/clearhttpcache">
                        {% trans from 'SonataAdminBundle' %}Clear HTTP Cache{% endtrans %}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
